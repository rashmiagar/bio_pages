<div class="container">
<div class="row">
<div class="col-md-4">
<div  class="panel panel-default" style="width: 200px; height:100%">
	<div class="panel-heading"> Categories </div>
	<div id="panel1" class="panel-body">
		<%= render :partial => "category" %>
	</div>
</div>
</div>


<div class="col-md-8">
<div id="myTabContent" class="tab-content">
  <div id="skills_div">
  	<ul id="skills_pane"> 
      <% for skill in Category.first.skills %>
        <li id= <%= skill.id %> > <%= link_to "#{skill.name}", skill_path(skill) %> <!--#myModal-->
        </li>
      <% end %>
    </ul>
  </div>
</div>
   
</div>
</div>
</div>

<script type="text/javascript">
$("#myTabs a").click(function (e){
	e.preventDefault()
	$(this).tab('show')
	var id = $(this).parent().attr("id");
	$.ajax({
	  url: "/categories/"+id,
	  dataType: "json",
	  type: "get",
	  data: {"category_id": $(this).parent().attr("id")},
	  complete: function(response){
	  	console.log (response);
	  	  $("#skills_div").empty().append(response.responseText);
	  }
	});
});
	

</script>

