<style type="text/css">
	.nav-tabs > li.active > a, .nav-tabs > li.active > a:hover, .nav-tabs > li.active > a:focus {
	  	color: #fff;
	  	background-color: #337ab7;
	  	border: none;
	}
</style>

<div class="container">
<div class="row">
<div class="col-md-3">
<div  class="panel panel-warning" style="width: 200px; height:100%">
	<div class="panel-heading"> Categories </div>
	<div id="panel1" class="panel-body">
		<%= render :partial => "category" %>
	</div>
</div>
</div>


<div class="col-md-8">
<div id="myTabContent" class="tab-content">
  <div id="skills_div" >
  	<div class="panel panel-info">
  	<div class="panel-heading">
  		<%= Category.first.name %>
  		</div>
  		<div class="panel-body">
  	<ul id="skills_pane"> 
      <% for skill in Category.first.skills %>
        <li id= <%= skill.id %> > <%= link_to "#{skill.name.titleize}", skill_path(skill) %> <!--#myModal-->
        </li>
      <% end %>
    </ul>
</div>
</div>
</div>
  </div>
</div>
   
</div>
</div>
</div>

<script type="text/javascript">
$("#myTabs a").click(function (e){
	e.preventDefault()
	$(this).tab('show')
	var id = $(this).parent().attr("id");
	$.ajax({
	  url: "/categories/"+id,
	  dataType: "json",
	  type: "get",
	  data: {"id": $(this).parent().attr("id")},
	  complete: function(response){
	  	console.log (response);
	  	  $("#skills_div").empty().append(response.responseText);
	  }
	});
});
	

</script>

