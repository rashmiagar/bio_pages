<% provide(:page_title, "#{@project.name} | Projects") %>

<div class="container">
	<h1 style = "text-align: center; color:black; font-size: 48px;"><%= @project.name.capitalize %></h1>
	
	<h3>Basic Info</h3>
    <table class= "table table-striped" id="about-us-institute-table" width="100%" cellspacing="0" cellpadding="0" border="0">
        <tbody>
            <tr>
                <td width="20%"><b>Description</b></td>
                <td width="80%"><%= @project.description %></td>
            </tr>
            <tr>
                <td><b>Client Name</b></td>
                <td><%= @project.client %></td>
            </tr>
            <tr>
                <td><b>Project Started Since</b></td>
                <td><%= @project.date_started %></td>
            </tr>
            
        </tbody>
    </table>

	<h3>Skills Used in the Project</h3>
    <% if @project.skills.present? %>
        <table class= "table table-striped table-bordered">
    		<thead>
    			<tr>
    				<td><b>Skill Name</b></td>
    				<td><b>Description</b></td>
    				<td><b>Skill Category</b></td>
    			</tr>
    		</thead>
    		<tbody>
                <% @project.skills.each do |skill| %>
                    <tr>
                        <td><%= link_to skill.name, skill_path(skill) %></td>
                    	<td><%= skill.description %></td>
                    	<td><%= skill.category.name %></td>
                    </tr>
                <% end %>    
    		</tbody>
    	</table>
    <% else %>
        <p>There are no skills used in the project.</p>
    <% end %>        

	<hr>
	<h3>Members in the Project</h3>
    <% if @project.skills.present? %>	
        <table class= "table table-striped table-bordered">
    		<thead>
    			<tr>
    				<td><b>Name</b></td>
    				<td><b>Email</b></td>
    				<td><b>Designation</b></td>
    				<td><b>Educational Qualification</b></td>
    			</tr>
    		</thead>
    		<tbody>
                <% @project.users.each do |user| %>
                    <tr>
                        <td><%= link_to user.name, show_bio_pic_page_path(user.id) %></td>
                    	<td><%= user.email %></td>
                    	<td><%= user.designation %></td>
                    	<td><%= user.education_qualification %></td>
                    </tr>
                <% end %>    
    		</tbody>
    	</table>
    <% else %>
        <p>There are no members in the project.</p>
    <% end %>    
</div>