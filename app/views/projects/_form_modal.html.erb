<div id="myModal" class="modal fade" style="display:none">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h4>Add New Project</h4>
      </div>
      <div class="modal-body">
        <p class="form-submit-message"></p>
        <%= form_for :project, :url => project_create_path ,:html => {:class => "form-horizontal skill_form", :method => 'post', :remote => true}  do |f| %>
          <%= f.label "Name"%>
          <%= f.text_field :name, :class => "form-control", :style => "margin-bottom: 10px;" %>
          <%= f.label "Description" %>
          <%= f.text_field :description, :class => "form-control", :style => "margin-bottom: 10px;" %>
          <%= f.label "Client" %>
          <%= f.text_field :client, :class => "form-control", :style => "margin-bottom: 20px;" %>
          <%= f.label "Date started" %>
          <%= f.text_field :date_started %><br/>
          <%= f.submit "Add Project", :class => "btn btn-success", :style => "margin-bottom: 10px;" %>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" aria-label="Close" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>