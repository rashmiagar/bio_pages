<div id="user_skill_<%= user_skill_id %>" class="modal fade" style="display:none">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <% user_skill = UserSkill.find(user_skill_id) %>
        <h4>Edit User Skill: <%= user_skill.skill.name.capitalize %></h4>
      </div>
      <div style="clear:both;"></div>

      <div class="modal-body" style="height: 140px;">
          <div style="clear:both;"></div>
        
        <p class="form-submit-message"></p>
        <%= form_tag(update_user_skill_path(user_skill_id) , :class => "form-horizontal skill_form", :method => 'post', :remote => true) do %>
          <div class="col-lg-12">
            <div style="clear:both !important;"></div>
            
            <div class="form-group">
              <%= radio_button_tag("bio_pic_pages[user_skills][#{user_skill_id}][mastered]", true, :class => "radio-inline") %>
              <%= label_tag(:mastered, "Mastered") %>
              <%= radio_button_tag("bio_pic_pages[user_skills][#{user_skill_id}][mastered]", false, {:class => "radio-inline", :checked => true}) %>
              <%= label_tag(:learning, "Learning") %>
            </div>
            <div style="clear:both;"></div>

            <div class="form-group">
              <%#= label_tag("Select Project") %>

              <%#= select_tag("bio_pic_pages[user_skills][#{user_skill_id}][user_projects]", options_from_collection_for_select(@projects, :id, :name), multiple: true, :prompt => 'Select', :class => "form-control skills-section-projects-dropdown") %>
              <br />
              <%= submit_tag "Update User Skill", :class => "btn btn-success" %>
              
            </div>
          </div>  
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default">Close</button>
      </div>
    </div>
  </div>
</div>