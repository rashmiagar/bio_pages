<div class="container">
  <h4><%= @skill.name %></h4>
  <div><%= @skill.description %></div>
  
  <hr>
  <div class="row">
  <div class="col-lg-4">
  <div class="panel panel-default">
    <div class="panel-heading">
      Masters
    </div>
    <div class="panel-body">
      <div class="table-responsive">
        <table class="table table-striped table-bordered">
          <thead>
            <tr>
              <th>Name</th>
              <th>Email</th>
              <th>Designation</th>
            </tr>
          </thead>
          <tbody>
            <% for user in @skill.user_skills.master_users %>
  		        <tr>
  		  	      <td><%= link_to user.name, show_bio_pic_page_path(user) %></td>
  		  	      <td><%= user.email %></td>
  		  	      <td><%= user.designation %></td>
  		        </tr>
            <% end %>
  		  </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

  <div class="col-lg-4">
  <div class="panel panel-default">
    <div class="panel-heading">
      Learners
    </div>
    <div class="panel-body">
      <div class="table-responsive">
        <table class="table table-striped table-bordered">
          <thead>
            <tr>
              <th>Name</th>
              <th>Email</th>
              <th>Designation</th>
            </tr>
          </thead>
          <tbody>
            <% for user in @skill.user_skills.learner_users %>
  		        <tr>
  		  	      <td><%= user.name %></td>
  		  	      <td><%= user.email %></td>
  		  	      <td><%= user.designation %></td>
  		        </tr>
  		     <% end %>
  		  </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
</div>
<hr>
  <div class="row">
  <div class="panel panel-default">
    <div class="panel-heading">
      Projects using <%= @skill.name %>
    </div>
    <div class="panel-body">
      <div class="table-responsive">
        <table class="table table-striped table-bordered">
          <thead>
            <tr>
              <th>Name</th>
              <th>Description</th>
            </tr>
          </thead>
          <tbody>
            <% for project in @skill.projects %>
  		        <tr>
  		  	      <td><%= link_to project.name, project_path(project) %></td>
  		  	      <td><%= project.description %></td>
  		        </tr>
  		      <% end %>
  		    </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
</div>
















