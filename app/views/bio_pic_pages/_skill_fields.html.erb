     <div class="skill_div fields form-inline">
	        <div class="form-group">
	      	  <label>Category</label>
	          <%= f.select(:category_id, options_from_collection_for_select(Category.all, :id, :name))%>
	        </div>
	      
	      <div class="form-group">
		      <label>Skill</label>
	        <%= f.text_field :name, :class => "form-control" %>
	      </div>
	      
	      <div class="form-group">
	      	<%= f.fields_for :user_skills do |builder| %>
	          <%= builder.radio_button(:mastered, true, :class => "radio-inline") %>
	          <%= builder.label(:mastered, "Mastered") %>
	          <%= builder.radio_button(:mastered, false, {:class => "radio-inline", :checked => true}) %>
	          <%= builder.label(:learning, "Learning") %>
	        <% end %>
	      </div>

	      <div class="form-group">
	        <%= f.fields_for "project_attributes" do |builder| %>
 	        <%= builder.select(:project_id, options_from_collection_for_select(Project.all, :id, :name), {class: "form-control"}) %>
 	        <% end %>
 		  </div>

 		  <div class="form-group">
 		    <%= f.fields_for :user_skills do |builder| %>
 	          <%= builder.text_field(:description, :class => "form-control") %>
	        <% end %>
	      </div>
	     

	    

	      <%= link_to "Remove", "#", :onclick => "remove_fields(this)" %>
	    </div>